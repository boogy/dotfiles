;###############################################################
[module/bspwm]
type = internal/bspwm
; Only show workspaces defined on the same output as the bar
; NOTE: The bspwm and XRandR monitor names must match, which they do by default.
; But if you rename your bspwm monitors with bspc -n this option will no longer
; behave correctly.
; Default: true
pin-workspaces = true
strip-wsnumbers = false

fuzzy-match = false
index-sort = true

label-focused = %{T4}%index%%icon%%{T-}
label-focused-background = ${colors.background-alt}
## color for mode menus
label-focused-underline= ${colors.primary2}
label-focused-padding = 2

label-occupied = %{T4}%index%%icon%%{T-}
label-occupied-padding = 2

label-urgent = %{T4}%index%%icon%%{T-}!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%%icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

format = <label-state> <label-mode>
wrapping-scroll = false

ws-icon-0 = 0; ÔÑ°
ws-icon-1 = 1; ÔÑ†
ws-icon-2 = 2; Ôâ®
ws-icon-3 = 3; Ôâ©
ws-icon-4 = 4; Ôô¥
ws-icon-5 = 5; ÔÑà
ws-icon-6 = 6; Ôï≥
ws-icon-7 = 7; ÔÅº
ws-icon-8 = 8; ÔÑâ
ws-icon-9 = 9; ÔÉ©
ws-icon-10 = 10; Ôè®
ws-icon-default = ÔÑ°


;###############################################################
;                           i3 Module
;###############################################################
[module/i3]
type = internal/i3
strip-wsnumbers = false

; Use fuzzy (partial) matching on labels when assigning icons to workspaces
; Example: code;‚ôö will apply the icon to all workspaces containing 'code' in the label
; Default: false
fuzzy-match = false

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
ws-icon-0 = 0; ÔÑ°
ws-icon-1 = 1; ÔÑ†
ws-icon-2 = 2; Ôâ®
ws-icon-3 = 3; Ôâ©
ws-icon-4 = 4; Ôô¥
ws-icon-5 = 5; ÔÑà
ws-icon-6 = 6; Ôï≥
ws-icon-7 = 7; ÔÅº
ws-icon-8 = 8; ÔÑâ
ws-icon-9 = 9; ÔÉ©
ws-icon-10 = 10; Ôè®
ws-icon-11 = 11; ÔÑ°
ws-icon-12 = 12; ÔÑ°
ws-icon-13 = 13; ÔÑ°
ws-icon-14 = 14; ÔÑ°
ws-icon-15 = 15; ÔÑ°
ws-icon-16 = 16; ÔÑ°
ws-icon-17 = 17; ÔÑ°
ws-icon-18 = 18; ÔÑ°
ws-icon-19 = 19; ÔÑ°
ws-icon-20 = 20; ÔÑ°
ws-icon-21 = 21; ÔÑ°
ws-icon-22 = 22; ÔÑ°
ws-icon-default = ÔÑ°

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; Default: false
index-sort = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = false

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %{T4}%index%%icon%%{T-}
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %{T4}%index%%icon%%{T-}
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %{T4}%index%%icon%%{T-}
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %{T4}%index%%icon%%{T-}
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

; Separator in between workspaces
; label-separator = |
; label-separator-padding = 0
; label-separator-foreground = #ffb52a


