{
  "title": "Mouse buttons",
  "rules": [
    {
      "description": "Mouse button4 and button5 to back/forward in Finder (CH-fr)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com.apple.finder"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": ["^com.apple.finder"],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "quote",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Mouse button4 and button5 to back/forward in web",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.[Ff]irefox$",
                "^com\\.apple\\.[Ss]afari$",
                "^com\\.google\\.[Cc]hrome$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.[Ff]irefox$",
                "^com\\.apple\\.[Ss]afari$",
                "^com\\.google\\.[Cc]hrome$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Mouse Cmd + button4/5 move prev/next workspace",
      "manipulators": [
        {
          "from": {
            "modifiers": {
              "mandatory": ["command"]
            },
            "pointing_button": "button4"
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_control"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_control"],
              "repeat": true
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "modifiers": {
              "mandatory": ["command"]
            },
            "pointing_button": "button5"
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_control"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_control"],
              "repeat": true
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Mouse button6 to Mission Control",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button6"
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Mouse button7 + button2/button1 for tab switching",
      "manipulators": [
        {
          "from": {
            "pointing_button": "button7"
          },
          "to": [
            {
              "set_variable": {
                "name": "mouse_button7_held",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "mouse_button7_held",
                "value": 0
              }
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "mouse_button7_held",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "pointing_button": "button2"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "name": "mouse_button7_held",
              "type": "variable_if",
              "value": 1
            }
          ],
          "from": {
            "pointing_button": "button1"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_control", "left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
