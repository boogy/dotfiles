{
    "http.proxyStrictSSL": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "json"
    ],
    "diagnostic.displayByAle": true,
    //
    // coc-yaml settings
    //
    "yaml.completion": true,
    "yaml.format.enable": true,
    "yaml.validate": false,
    "yaml.hover": true,
    "yaml.schemaStore.enable": true,
    "yaml.format.bracketSpacing": true,
    "yaml.schemas": {
        // Additonal schemas: https://www.schemastore.org/json/
        "/home/boogy/.config/nvim/json-schemas/ansible-stable-2.9.json": [
            "*/host_playbooks/*.yaml",
            "*/host_playbooks/*.yml",
            "*/tasks/*.yml",
            "*/tasks/*.yaml"
        ],
        "/home/boogy/.config/nvim/json-schemas/ansible-role-2.9.json": [
            "*/roles/*.yaml",
            "*/roles/*.yml",
            "*/roles/*/tasks/*.yml",
            "*/roles/*/tasks/*.yaml"
        ]
    },
    "yaml.customTags": [
        "!vault"
    ],
    //
    // coc-pyright config
    //
    // "python.pythonPath": "/usr/sbin/python3",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": [
        "~/bin/mylib.py"
    ],
    "python.venvPath": ".venv",
    //
    "python.linting.enabled": false,
    "python.linting.lintOnSave": false,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "pylint",
    "python.linting.pylintArgs": [
        "--max-line-length=120",
        "--disable=missing-docstring,E501,W503,C0114,C0103,E402",
        "--disable=W,E"
    ],
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=120",
        "--ignore=E501,W503,C0114,C0103,E402"
    ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py",
        "**/__pycache__"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "diagnostic.level": "error",
        "reportUnusedClass": "warning",
        "reportUnusedImport": "warning"
    },
    // explicitly disable the rest
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pep8Enabled": false,
    "python.linting.banditEnabled": false,
    "python.linting.pytypeEnabled": false,
    "python.linting.pylamaEnabled": false,
    "python.linting.prospectorEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    //
    // Language servers
    //
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve",
                "completion"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    },
    //
    // coc-snippets
    //
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
    "json.enable": true,
    "json.format.enable": true,
    //
    // coc-highlight
    //
    "highlight.colorNames.enable": false,
    "highlight.colors.enable": true,
    "highlight.disableLanguages": [
        "markdown"
    ],
    //
    // explorer
    //
    "explorer.width": 50,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.quitOnOpen": false,
    "explorer.buffer.tabOnly": false,
    "explorer.keyMappings.global": {
        "*": "toggleSelection",
        "<tab>": "actionMenu",
        "h": "collapse",
        "l": [
            "expandable?",
            "expand",
            "open"
        ],
        "J": [
            "toggleSelection",
            "nodeNext"
        ],
        "K": [
            "toggleSelection",
            "nodePrev"
        ],
        "gl": "expandRecursive",
        "gh": "collapseRecursive",
        "<cr>": [
            "expandable?",
            "expand",
            "open"
        ],
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",
        "a": "addFile",
        "A": "addDirectory",
        ".": "toggleHidden",
        "R": "refresh",
        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage",
        "r": "rename",
        "v": "open:vsplit",
        "o": "open:tab"
    },
    "powershell.debugging.createTemporaryIntegratedConsole": false,
    "powershell.integratedConsole.showOnStartup": false
}
