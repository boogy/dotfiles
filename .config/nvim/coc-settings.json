{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "json"
    ],
    "http.proxyStrictSSL": true,
    //
    // coc-yaml settings
    //
    "yaml.completion": true,
    "yaml.format.enable": true,
    "yaml.validate": true,
    "yaml.hover": true,
    "yaml.schemaStore.enable": true,
    "yaml.schemas": {
        "https://json.schemastore.org/ansible-playbook": [
            "*/host_playbooks/*.yaml",
            "*/host_playbooks/*.yml"
        ],
        "https://json.schemastore.org/ansible-role-2.9": [
            "*/host_playbooks/*.yaml",
            "*/host_playbooks/*.yml"
        ],
        "https://json.schemastore.org/ansible-inventory": [
            "*/host_playbooks/*.yaml",
            "*/host_playbooks/*.yml"
        ]
    },
    // if false, microsoft python engine will be used
    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/usr/sbin/pylint",
    "python.sortImports.path": "/usr/sbin/isort",
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".venv"
    ],
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve",
                "completion"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    },
    //
    // coc-snippets
    //
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",
    "json.enable": true,
    "json.format.enable": true,
    //
    // coc-highlight
    //
    "highlight.colorNames.enable": false,
    "highlight.colors.enable": true,
    "highlight.disableLanguages": [
        "markdown"
    ],
    //
    // explorer
    //
    "explorer.width": 50,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.quitOnOpen": false,
    "explorer.buffer.tabOnly": false,
    "explorer.keyMappings.global": {
        "*": "toggleSelection",
        "<tab>": "actionMenu",
        "h": "collapse",
        "l": [
            "expandable?",
            "expand",
            "open"
        ],
        "J": [
            "toggleSelection",
            "nodeNext"
        ],
        "K": [
            "toggleSelection",
            "nodePrev"
        ],
        "gl": "expandRecursive",
        "gh": "collapseRecursive",
        "<cr>": [
            "expandable?",
            "expand",
            "open"
        ],
        "y": "copyFilepath",
        "Y": "copyFilename",
        "c": "copyFile",
        "x": "cutFile",
        "p": "pasteFile",
        "d": "delete",
        "D": "deleteForever",
        "a": "addFile",
        "A": "addDirectory",
        ".": "toggleHidden",
        "R": "refresh",
        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage",
        "r": "rename",
        "v": "open:vsplit",
        "o": "open:tab"
    }
}
