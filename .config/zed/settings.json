// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2",
    "enabled": true
  },
  "vim_mode": true,
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "tab_size": 4,
  "hour_format": "hour24",
  "use_autoclose": true,
  // Disable ligatures
  "buffer_font_features": {
    "calt": false,
    "liga": false
  },
  "show_whitespaces": "selection",
  "remove_trailing_whitespace_on_save": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },
  "buffer_font_family": "Hack Nerd Font",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 1,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  "show_call_status_icon": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  // "line_height": "standard",
  "buffer_line_height": {
    "custom": 1.5
  },
  //-------------------------------------------------
  // Project
  //-------------------------------------------------
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    // "indent_guides": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "auto"
    }
    // "indent_guides": {"show": "always"}
  },
  //-------------------------------------------------
  // Vim Mode
  //-------------------------------------------------
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true,
    "toggle_relative_line_numbers": true,
    "highlight_on_yank_duration": 50,
    // "custom_digraphs": {
    //   "fz": "ðŸ§Ÿâ€â™€ï¸"
    // },
    "scrollbar": {
      "show": "auto"
    }
  },
  //-------------------------------------------------
  // Terminal
  //-------------------------------------------------
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "dock": "bottom",
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "env": {},
    "font_family": "Hack Nerd Font",
    "font_features": null,
    "font_size": 14,
    "line_height": "standard",
    "option_as_meta": false,
    "button": true,
    "toolbar": {
      "breadcrumbs": true
    }
  },
  //-------------------------------------------------
  // Language specific settings
  //-------------------------------------------------
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace"
        },
        "python": {
          "pythonPath": ".venv/bin/python",
          "venv": ".venv",
          "venvPath": "."
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "python": {
          "pythonPath": ".venv/bin/python"
        },
        "settings": {
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          },
          "python.analysis": {
            "diagnosticMode": "workspace"
            // "typeCheckingMode": "strict"
          }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": false
          // "schemaStore": {
          //   "enable": true
          // }
          // "schemas": {
          //   "https://json.schemastore.org/github-action.json": [
          //     "/.github/workflows/*.yaml",
          //     "/.github/workflows/*.yml"
          //   ]
          //   // "https://json.schemastore.org/github-workflow.json": [
          //   //   "/.github/workflows/*.yaml",
          //   //   "/.github/workflows/*.yml"
          //   // ]
          // }
        }
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": "language_server",
      "language_servers": ["pyright", "ruff"] // ["pyright", "ruff"]
    },
    "JSON": {
      "format_on_save": "language_server",
      "tab_size": 2
    },
    "JSONC": {
      "format_on_save": "on",
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "YAML": {
      "format_on_save": "language_server",
      "tab_size": 2
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "enable_language_server": true,
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "terraform",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "HCL": {
      "format_on_save": {
        "external": {
          "command": "sh",
          "arguments": [
            "-c",
            "TMPFILE=$(mktemp) && cat - > $TMPFILE && terragrunt hclfmt --terragrunt-hclfmt-file $TMPFILE && cat $TMPFILE && rm $TMPFILE"
          ]
        }
      }
    }
  },
  "language_overrides": {
    "Scheme": {
      "formatter": {
        "external": {
          "command": "terraform",
          "arguments": ["fmt", "-"]
        }
      }
    }
    // "Python": {
    //   "format_on_save": {
    //     "external": {
    //       "command": "ruff",
    //       "arguments": [
    //         "check",
    //         "--fix",
    //         "--stdin-filename",
    //         "{buffer_path}",
    //         "-"
    //       ]
    //     }
    //   },
    //   "linter": {
    //     "external": {
    //       "command": "ruff",
    //       "arguments": ["check", "--stdin-filename", "{buffer_path}", "-"]
    //     }
    //   }
    // }
  },
  // "file_types": {
  //   "C++": ["c"],
  //   "TOML": ["MyLockFile"],
  //   "Dockerfile": ["Dockerfile*"]
  // },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "ensure_final_newline_on_save": true,
  "file_icons": true,
  "git_status": true,
  "format_on_save": "on",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "formatter": "language_server"
  // "formatter": {
  //   "external": {
  //     "command": "prettier",
  //     "arguments": ["--stdin-filepath", "{buffer_path}"]
  //   }
  // }
}
