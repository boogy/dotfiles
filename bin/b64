#!/usr/bin/env python3

import sys
import base64

b64d = lambda x: base64.b64decode(x.encode('utf-8', errors='replace'))
b64e = lambda x: base64.b64encode(x.encode('utf-8', errors='replace'))

if sys.argv[1] == "d":
    try:
        print("")
        print(str(b64d(sys.argv[2]), encoding='ascii', errors='backslashreplace'))
    except Exception as e:
        print("ERROR: {}".format(e))

elif sys.argv[1] == "e":
    try:
        print("")
        print(str(b64e(sys.argv[2]), encoding='ascii', errors="backslashreplace"))
    except Exception as e:
        print("ERROR: {}".format(e))

else:
    print("Usage:")
    print("\tb64 [d|e] value")
